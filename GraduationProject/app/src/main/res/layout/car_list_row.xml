<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/accentView"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:visibility="visible"
        android:background="@color/exit_accept_red_color"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/licenseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="111나 1234"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="주차장 : "/>
            <TextView
                android:id="@+id/startLocView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="건대병원 A구역"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="식당 : "/>
            <TextView
                android:id="@+id/arrivalLocView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="건국대학교 신공학관"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/exitAcceptBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|end"
            android:visibility="visible"
            android:text="출차\n수락"
            android:textStyle="bold"
            android:textColor="@color/exit_accept_red_color"
            android:background="@drawable/exit_accept_btn"/>
    </FrameLayout>

</LinearLayout>